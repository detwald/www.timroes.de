<div class="author">
	<img class="author-avatar" src="/avatars/{{ id }}.jpg" alt="Profile picture of {{name}}">
	<div class="author-info">
		<div class="author-name">{{name}}</div>
		<div class="author-socials">
			{{#if gplus}}
				<a href="https://plus.google.com/{{gplus}}" target="_blank" title="Google+ Profile"><i class="icon-gplus"></i></a>
			{{/if}}
			{{#if github}}
				<a href="https://github.com/{{github}}" target="_blank" title="GitHub Profile"><i class="icon-github"></i></a>
			{{/if}}
			{{#if twitter}}
				<a href="https://twitter.com/{{twitter}}" target="_blank" title="Twitter Profile"><i class="icon-twitter"></i></a>
			{{/if}}
		</div>
		<div class="author-bio">{{bio}}</div>
	</div>
</div>
