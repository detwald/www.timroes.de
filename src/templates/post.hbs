<article>
	<h1>{{title}}</h1>
	<div class="postmeta">
		<time datetime="{{post.meta.created}}"><i class="icon-calendar"></i> {{date post.meta.created}}</time>
	</div>

	{{{content}}}

</article>

<div class="postbottom">
	<a href="#disqus_thread" title="Show comments"><i class="icon-comment"></i> <span class="disqus-comment-count" data-disqus-url="{{canonical}}">0</span></a>

	<div class="postsocials">
		<span class="postsocials-label">Share on</span>
		<a href="https://plus.google.com/share?url={{encode post.canonical}}" target="_blank" title="Share on Google+"><i class="icon-gplus"></i></a>
		<a href="https://twitter.com/share?via={{blogAuthor.twitter}}&url={{encode post.canonical}}&text={{encode post.meta.title}}" target="_blank" title="Share on Twitter"><i class="icon-twitter"></i></a>
		<a href="https://www.facebook.com/sharer/sharer.php?u={{encode post.canonical}}" target="_blank" title="Share on Facebook"><i class="icon-facebook"></i></a>
	</div>
</div>

{{!-- Show other posts of this post series --}}
{{#if post.series}}
	<div class="serieslinks">
		<div class="serieslinks-label">
			Read more &hellip;
			<svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" class="expand-icon plus">
				<defs>
					<path id="line" d="M 0,0 l 18,0 a 1,1 0 0 1 0,2 l -18,0 a 1,1 0 0 1 0,-2" />
				</defs>

				<use id="t" xlink:href="#line" x="3" y="11" />
				<use id="m" xlink:href="#line" x="3" y="11" />
				<use id="b" xlink:href="#line" x="3" y="11" />
			</svg>
		</div>
		<div class="serieslinks-linklist">
			{{#each post.series as |related|}}
			{{#notequals related.id ../post.id}}
			<a href="{{related.url}}" class="serieslink">
				{{related.meta.title}}
				<div class="serieslink-date"><i class="icon-calendar"></i> {{date related.meta.created}}</div>
			</a>
			{{/notequals}}
			{{/each}}
		</div>
	</div>
{{/if}}

<div class="authors">
	{{#each post.meta.authors as |author|}}
		{{>author (lookup ../authors @this) id=author}}
	{{/each}}
</div>

<div id="disqus_thread" class="comments"></div>
<script>
	var disqus_config = function () {
		this.page.url = '{{canonical}}';
	};

	(function() {
		var d = document, s = d.createElement('script');
		s.src = '//timroes.disqus.com/embed.js';
		s.setAttribute('data-timestamp', +new Date());
		(d.head || d.body).appendChild(s);
	})();
</script>

<script id="dsq-count-scr" src="//timroes.disqus.com/count.js" async></script>
